{
    "plugins": ["prettier","import","@typescript-eslint"],
    "extends": [
        "plugin:prettier/recommended",
        "prettier",
        "plugin:@typescript-eslint/recommended",
        "eslint:recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "env": {
        "es6": true,
        "browser": true,
        "node": true
    },
    "rules": {
        "prettier/prettier": [
            "error", { "endOfLine":"auto" }
        ],
        "no-debugger": "off",
        "no-console": 1,
        "class-methods-use-this": "off",
        "arrow-body-style": "off",
        "@typescript-eslint/no-explicit-any": "off",
        "no-undef": 0
    },
    "ignorePatterns": ["index.html", "webpack.config.js", "webpack.development.js", "webpack.production.js", "dist"]
}
